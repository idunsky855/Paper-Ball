<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HighScoresTableActivity">

    <FrameLayout
        android:id="@+id/main_FRAME_scores"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/pale_pink"
        android:padding="@dimen/default_highscores_padding"/>

    <FrameLayout
        android:id="@+id/main_FRAME_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/night_blue"
        android:padding="@dimen/default_highscores_padding" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pale_pink">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/table_BTN_menu"
                android:layout_width="@dimen/default_btn_width"
                android:layout_height="@dimen/default_btn_height"
                android:layout_centerInParent="true"
                android:text="@string/go_to_menu"
                android:backgroundTint="@color/night_blue" />

        </RelativeLayout>
    </FrameLayout>

</LinearLayout>