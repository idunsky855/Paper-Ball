                android:id="@+id/main_IMG_paper10"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/paper_ball"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_paper15"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/paper_ball"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_paper20"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/paper_ball"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bin0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:src="@drawable/bin_vector_icon"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_game_column1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_paper1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/paper_ball"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_paper6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/paper_ball"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_paper11"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/paper_ball"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_paper16"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/paper_ball"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_paper21"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/paper_ball"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bin1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:src="@drawable/bin_vector_icon"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_game_column2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_paper2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/paper_ball"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_paper7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/paper_ball"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_paper12"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/paper_ball"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_paper17"
                android:layout_width="match_parent"
