                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/paper_ball"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bin4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:src="@drawable/bin_vector_icon"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_FAB_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_FAB_linear_layout_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_fab_bottom_margin"
        android:layout_centerHorizontal="true"
        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/main_FAB_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/baseline_arrow_circle_left_24"
            android:layout_marginStart="@dimen/default_fab_margin"
            android:layout_alignParentStart="true"
            app:backgroundTint="@color/pale_blue"
            app:tint="@color/pink"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/main_FAB_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/baseline_arrow_circle_right_24"
            android:layout_marginEnd="@dimen/default_fab_margin"
            android:layout_alignParentEnd="true"
            app:backgroundTint="@color/pale_blue"
            app:tint="@color/pink"
            />
    </RelativeLayout>

</RelativeLayout>