<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/line_CARD_data"
        android:layout_width="match_parent"
        android:layout_height="@dimen/table_score_default_line_height"
        android:layout_marginVertical="@dimen/table_default_margin"
        android:elevation="@dimen/default_elevation"
        app:cardElevation="@dimen/default_elevation"
        app:cardCornerRadius="@dimen/default_elevation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/pale_pink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/peach">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/score_LBL_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/score_table_default_margin"
            android:layout_marginHorizontal="@dimen/score_table_default_margin"
            android:layout_weight="1"
            android:maxLines="1"
            android:textSize="@dimen/score_table_string_size"
            android:textColor="@color/night_blue"
            android:background="@color/pale_pink"
            tools:text="Name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/score_LBL_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/score_table_default_margin"
            android:layout_marginRight="@dimen/score_table_default_margin"
            android:layout_weight="1"
            android:maxLines="1"
            android:textSize="@dimen/score_table_string_size"
            android:textColor="@color/night_blue"
            android:background="@color/pale_pink"
            tools:text="Score" />
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>